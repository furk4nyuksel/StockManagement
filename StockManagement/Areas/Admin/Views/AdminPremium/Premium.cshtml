@model List<StockManagementOperation.ProductMainPage>
@{
    ViewBag.Title = "Premium";
    Layout = "~/Views/Admin_Panel.cshtml";
}


<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#flip").click(function () {
                $("#panel").slideToggle("slow");
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#flip1").click(function () {
                $("#panel1").slideToggle("slow");
            });
        });
    </script>

    <style>
        #panel, #flip {
            padding: 5px;
            text-align: center;
            background-color: #F1F2F7;
            border: solid 1px #272C33;
        }

        #panel {
            padding: 50px;
            display: none;
        }

        #panel1, #flip1 {
            padding: 5px;
            text-align: center;
            background-color: #F1F2F7;
            border: solid 1px #272C33;
        }

        #panel1 {
            padding: 50px;
            display: none;
        }
    </style>
</head>
<body>

    <div id="flip">Premium Urun Aktif Et</div>
    <div id="panel">

        <table class="table-bordered table-responsive table-striped table-condensed table-hover col-12">
            @foreach (var premiumproduct in Model)
            {
                <tr class="col-lg-12">
                    @if (premiumproduct.IsActive == false)
                    {
                                
                        <th width="300px">@premiumproduct.Products.ProductName</th>
                        <th width="300px">@premiumproduct.Products.Company.CompanyName</th>
                        <th> <img src="@premiumproduct.Products.ProductPhotograph.First().PhotoSource" style="width:300px;height:100px;" /> </th>
                        <td width="300px">@Html.ActionLink("Premium Urun Yap", "ActivatePremium", "AdminPremium", new { @productid = premiumproduct.ProductID }, new { @class = "btn btn-warning" })</td>
                        <td width="300px">@Html.ActionLink("Premium Urun Yapma", "DeActivatePremium", "AdminPremium", new { @productid = premiumproduct.ProductID }, new { @class = "btn btn-warning" })</td>
                    
                    }
                </tr>
            }
        </table>


    </div>

    <div id="flip1">Premıum Urun Sil</div>
    <div id="panel1">

        <table class="table-bordered table-responsive table-striped table-condensed table-hover col-6">
            @foreach (var premiumproduct in Model)
            {
                <tr class="col-lg-6">
                    @if (premiumproduct.IsActive == true)
                    {
                                
                        <th width="300px">@premiumproduct.Products.ProductName</th>
                        <th width="300px">@premiumproduct.Products.Company.CompanyName</th>
                        <th> <img src="@premiumproduct.Products.ProductPhotograph.First().PhotoSource" style="width:300px;height:100px;" /> </th>
                        <td width="300px">@Html.ActionLink("Premium Urunu İptal Et", "DeActivatePremium", "AdminPremium", new { @productid = premiumproduct.ProductID }, new { @class = "btn btn-warning" })</td>
                    
                    }
                </tr>
            }

        </table>

    </div>

</body>
</html>
