@model IEnumerable<StockManagementOperation.Company>
@{
    ViewBag.Title = "CompanyActivate";
    Layout = "~/Views/Admin_Panel.cshtml";
}

<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#flip").click(function () {
                $("#panel").slideToggle("slow");
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#flip1").click(function () {
                $("#panel1").slideToggle("slow");
            });
        });
    </script>

    <style>
        #panel, #flip {
            padding: 5px;
            text-align: center;
            background-color: #F1F2F7;
            border: solid 1px #272C33;
        }

        #panel {
            padding: 50px;
            display: none;
        }

        #panel1, #flip1 {
            padding: 5px;
            text-align: center;
            background-color: #F1F2F7;
            border: solid 1px #272C33;
        }

        #panel1 {
            padding: 50px;
            display: none;
        }
    </style>
</head>
<body>

    <div id="flip">Şirket Aktif Et</div>
    <div id="panel">
      
              <table class="table-bordered table-responsive table-striped table-condensed table-hover col-6">
            @foreach (var companyıtem in Model)
            {
                <tr class="col-lg-6">
                    @if (companyıtem.IsActive==false)
                    {
                        <th class="col-lg-2">@companyıtem.CompanyName</th>
                        <th class="col-lg-2">@companyıtem.AppUsers.FirstName  @companyıtem.AppUsers.LastName</th>
                        <td class="col-lg-4">@Html.ActionLink("Aktif Et", "CompanyActivated", "AdminCompanyActivate", new { @cid = companyıtem.CompanyID }, new { @class = "btn btn-danger" })</td>
                        <td class="col-lg-4">@Html.ActionLink("Sirketi Reddet", "CompanyDeleted", "AdminCompanyActivate", new { @cid = companyıtem.CompanyID }, new { @class = "btn btn-danger" })</td>
                    }
               </tr>
            }
           </table>

        
    </div>

    <div id="flip1">Şirket Yasakla</div>
    <div id="panel1">

        <table class="table-bordered table-responsive table-striped table-condensed table-hover col-6">
            @foreach (var companyıtem in Model)
            {
            <tr class="col-lg-6">
                @if (companyıtem.IsActive == true)
                {
                    <th class="col-lg-2">@companyıtem.CompanyName</th>
                    <th class="col-lg-2">@companyıtem.AppUsers.FirstName  @companyıtem.AppUsers.LastName</th>
                    <td class="col-lg-4">@Html.ActionLink("Deaktif Et", "CompanyDeactivated", "AdminCompanyActivate", new { @cid = companyıtem.CompanyID }, new { @class = "btn btn-danger" })</td>

                }
            </tr>
            }

        </table>

    </div>

</body>
</html>

