@model IEnumerable<StockManagementOperation.Products>
@{
    ViewBag.Title = "ProductConfirm";
    Layout = "~/Views/Admin_Panel.cshtml";
}

<center><h3>ProductConfirm</h3></center>

<center>
    @{
        if (Session["hata"] != "")
        {
            <center><h3 class="bg-warning">@Session["hata"]</h3></center>
            Session["hata"] = "";
        }
    }
    <table class="table-bordered table-responsive table-striped table-condensed table-hover col-6">
        @foreach (var productıtem in Model)
        {
            <tr>
                <th width="300px">@productıtem.ProductName</th>
                <th width="300px">@productıtem.Company.CompanyName</th>
                <th> <img src="@productıtem.ProductPhotograph.First().PhotoSource" style="width:300px;height:100px;" /> </th>
                <td width="300px">@Html.ActionLink("Onayla", "Confirmed", "AdminProductConfirm", new { @id = productıtem.ProductID }, new { @class = "btn btn-danger" })</td>
                <td width="300px">@Html.ActionLink("Reddet", "Deleted", "AdminProductConfirm", new { @id = productıtem.ProductID }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </table>
</center>