
@{
    ViewBag.Title = "updateCategory";
    Layout = "~/Views/Admin_Panel.cshtml";
}

<h2>Kategori Degiştirme</h2>
@if (Session["hata"] != "")
{
    <center><h3 class="bg-warning">@Session["hata"]</h3></center>
    Session["hata"] = "";
}
<center>
    @using (Html.BeginForm("updateCategory", "AdminCategory", FormMethod.Post))
    {
        <div class="form-group">
            <div class="col-lg-4">
                <input type="text" class="form-control text-center " value="@ViewBag.categoriad" name="categoriname" />
            </div>
            <div class="col-lg-4">
                <input type="number" min="1" max="10" class="form-control text-center " placeholder="Kategori Önemi Giriniz" name="order" />
            </div>

        </div><br /><br />
        <div class="form-group col-lg-12">
            <input type="submit" class="btn btn-success" value="Kaydet" />
        </div>
        <div class="col-lg-4">
            <input type="text" value="@ViewBag.deisecekkategori" hidden="hidden" class="form-control text-center " placeholder="Kategori Giriniz" name="categoryıd" />
        </div>
    }

</center>