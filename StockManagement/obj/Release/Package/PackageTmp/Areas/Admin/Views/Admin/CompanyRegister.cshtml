
@{
    ViewBag.Title = "CompanyRegister";
    Layout = "~/Views/Admin_Panel.cshtml";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sufee Admin - HTML5 Admin Template</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="~/assets/css/normalize.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/assets/scss/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>

<body class="bg-dark">

    @{
        if (Session["hata"] != "")
        {
            <center><h3 class="bg-warning">@Session["hata"]</h3></center>
            Session["hata"] = "";
        }
    }


    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-form">
                    @using (Html.BeginForm("CompanyRegister", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {

                        <div class="form-group">
                            <label>Şirket İsmi</label>
                            <input type="text" class="form-control" placeholder="Şirket İsmi" name="companyname">
                        </div>
                        <div class="form-group">
                            <label>Banka Numarası</label>
                            <input type="number" maxlength="16" class="form-control" placeholder="Banka Numarası" name="bankno">
                        </div>
                        <div class="form-group">
                            <label>Şirket Resminizi Seciniz</label>
                            <input type="file" name="myFile" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-success btn-flat m-b-30 m-t-30" value="Kaydet" />
                        </div>
                    }
                    @if (ViewBag.sonuc == "Basarısız Kayıt")
                    {
                        <div class="form-group">
                            <h4>Şirket İsminiz Kullanımda<h4>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>

</body>

</html>