@model List<StockManagementOperation.ProductMainPage>

<link href="~/assets3/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/assets3/css/bootstrap.css" rel="stylesheet" />
<link href="~/assets3/css/product.css" rel="stylesheet" />

<div class="container">
 
     

            <br /> <br /> <br /> <br /> <br /> <br />
            <br /> <br /> <br /> <br /> <br /> <br />
            <br /> <br /> <br /> <br /> <br /> <br />
            <br /> <br /> <br /> <br /> <br /> <br />
            <h1>Size Önerilen Ürünler</h1>



            @foreach (StockManagementOperation.ProductMainPage ProductMain in Model)
            {


                <div id="products">
                    <div class="item  col-xs-4 col-lg-4">
                        <div class="thumbnail">
                            <img class="group list-group-image" style="height:348px;  width:457px;" src="@ProductMain.Products.ProductPhotograph.First().PhotoSource" alt="" />
                            <div class="caption">
                                <h4 class="group inner list-group-item-heading text-black">
                                    @ProductMain.Products.ProductName
                                </h4>
                                <p class="group inner list-group-item-text">
                                    <span class="text-danger"> Kalan Stok: @ProductMain.Products.ProductStock </span>
                                </p>
                                <p>Görüntülenme Sayısı: @ProductMain.Products.ProductDetails.First().ProductView</p>
                                <div class="row">
                                    <div class="col-xs-12 col-md-3">
                                        <p class="lead">
                                            <del> <small> @string.Format("{0:c}", ProductMain.Products.OldPrice)</small></del>
                                            @string.Format("{0:c}", ProductMain.Products.NewPrice)
                                        </p>
                                        <h5 class="morris-hover">Satıcı <a href="/Product/CompanyProduct/@ProductMain.Products.CompanyID">@ProductMain.Products.Company.CompanyName</a></h5>
                                    </div>
                                    <div class="col-xs-12 col-md-offset-3">
                                        @Html.ActionLink("Ürün Detayları", "ProductDetails", "Product", new { @id = ProductMain.Products.ProductID }, new { @class = "btn btn-success" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>


            }

  

  

</div>

