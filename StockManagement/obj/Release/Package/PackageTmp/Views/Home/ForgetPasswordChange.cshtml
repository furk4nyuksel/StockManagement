
@{
    ViewBag.Title = "ForgetPasswordChange";
    Layout = "~/Views/Anasayfa2.cshtml";
}


<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<h2>Şifreyi Güncelle</h2>

@using (Html.BeginForm("ForgetPasswordChange", "Home", FormMethod.Post, new { @name = "myForm" }))
{
    if (ViewBag.key != null)
    {


      
            <input type="hidden"   class="form-control" name="key" placeholder="Dogrulama Kodu"    hidden="hidden"  value="@ViewBag.key" />

       
        <div class="col-lg-5" ng-app="">
            <div class="form-group">
                <h3>Hesabınızın Email Adresi</h3>
                <input type="email" class="form-control" name="Email" ng-model="text" placeholder="Email" />
                <span ng-show="myForm.email.$error.email">Hatalı Mail Adresi Girdiniz</span>
            </div>


            <div class="form-group">

                <input type="password" class="form-control " name="degis1" placeholder="Şifre" />

            </div>
            <div class="form-group">

                <input type="password" class="form-control " name="degis2" placeholder="Şifre Tekrar" />


            </div>

            <div class="form-group">

                <input type="submit" class="form-control btn-success " value="Şifreyi Değiştir" />



            </div>

        </div>




    }



}
@{

    if (ViewBag.hatali != null)
    {
        <span class="bg-warning">@ViewBag.hatali</span>

    }

    if (ViewBag.basarili != null)
    {
        <span class="bg-warning">@ViewBag.basarili</span>

    }
}

