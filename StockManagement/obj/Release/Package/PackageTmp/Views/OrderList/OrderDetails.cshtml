@model List<StockManagementOperation.OrderDetails>
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Anasayfa2.cshtml";
}

<h2>Siparişlerim</h2>
<table class="table-bordered table-responsive table-striped table-condensed table-hover  ">
    <tr>
        <th>Sipariş Numarası</th>
        <th>Görüntü</th>
        <th>Ürün Adı</th>
        <th>ürün Adeti</th>
        <th>Ürün Fiyatı</th>
        <th> Satın Alma Tarihi</th>

    </tr>

    @foreach (StockManagementOperation.OrderDetails orders in Model)
    {
        <tr>

            <td>@orders.OrderDetailsID</td>
            <td><img src="@orders.Products.ProductPhotograph.First().PhotoSource" style="width:100px;height:100px;" /></td>
            <td><a href="~/Product/ProductDetails/@orders.ProductID">@orders.Products.ProductName</a></td>
            <td>@orders.Quantity</td>
            @{ 
               var tutar=orders.Products.NewPrice * orders.Quantity;
            }
            <td>@tutar</td>
            <td>@String.Format("{0:dd/MM/yyyy}", orders.Order.CreDate)</td>
        </tr>

        <br />

        <br />
        <br />






    }
</table>