
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Anasayfa2.cshtml";
}

<h1>Adress Seçiniz</h1>
<div class="container">

    @{
        if (Session["hataadres"] != null)
        {
            <h3 class="bg-warning">@Session["hataadres"]</h3>
        }

      

        using (Html.BeginForm("Index", "PayInfo", FormMethod.Post))
        {
            <div class="form-group">

                @Html.DropDownList("ddladress", new SelectList(ViewBag.AdressListesi, "AddressID", "AddressTitle"), "Adres Seçiniz", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Seç" class="btn btn-danger" />
                @Html.ActionLink("Adress Ekle", "AddAdress", "Adress", null, new { @class = "btn btn-success" })
            </div>
        }

    }






</div>