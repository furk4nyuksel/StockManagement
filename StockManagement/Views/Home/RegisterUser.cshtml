
@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Anasayfa2.cshtml";
}

 
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>



<h2>Kayıt Ol</h2>


<br /> <br />



<div class="container">

    <div class="col-lg-5" ng-app="">
        @using (Html.BeginForm("RegisterUser", "Home", FormMethod.Post, new { @name = "myForm" }))
        {


            <div class="form-group">

                <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı Adı" />

            </div>

            <div class="form-group">

                <input type="email" class="form-control" ng-model="text" name="email" placeholder="Email" />
                <span ng-show="myForm.email.$error.email">Hatalı Mail Adresi Girdiniz</span>
            </div>

            <div class="form-group">

                <input type="password" class="form-control" name="sifre1" placeholder="Şifre" id="sifre" />

            </div>
            <div class="form-group">

                <input type="password" class="form-control" name="sifre2" placeholder="Şifre Tekrar" id="sifreTekrar" />

                @{ 

                    if (ViewBag.sifrehata != null)
                    {
                        <span class="bg-warning">@ViewBag.sifrehata</span>
                    }
                   


                }

            </div>


            <div class="form-group">

                <input type="submit" class="form-control btn-success" value="Kayıt Ol" />

            </div>


        }
    </div>

</div>
