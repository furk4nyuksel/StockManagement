<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href='http://fonts.googleapis.com/css?family=Maven+Pro:400,900,700,500' rel='stylesheet' type='text/css'>
    <link href="~/assets3/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/assets2/css/bootstrap.css" rel="stylesheet" />

    <!--- start-mmmenu-script---->
    <script src="~/assets3/js/jquery.min.js" type="text/javascript"></script>
    <link type="text/css" rel="stylesheet" href="~/assets3/css/jquery.mmenu.all.css" />
    <script type="text/javascript" src="~/assets3/js/jquery.mmenu.js"></script>
    <script type="text/javascript">

        //	The menu on the left
        $(function () {
            $('nav#menu-left').mmenu();
        });
    </script>
    <!-- start slider -->
    <link href="~/assets3/css/slider.css" rel="stylesheet" />
    <script type="text/javascript" src="~/assets3/js/jquery.eislideshow.js"></script>
    <script type="text/javascript" src="~/assets3/js/easing.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#ei-slider').eislideshow({
                animation: 'center',
                autoplay: true,
                slideshow_interval: 3000,
                titlesFactor: 0
            });
        });
    </script>
    <!-- start top_js_button -->
    <script type="text/javascript" src="~/assets3/js/move-top.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1200);
            });
        });
    </script>
</head>
<body>
    <!-- start header -->
    <div class="top_bg">
        <div class="wrap">
            <div class="header">
                <div class="logo">
                    <a href="/Home/Index"><img src="~/assets3/images/logo.png" alt="" /></a>
                </div>
                <div class="log_reg">
                    <ul>
                        @{

                            if (Session["Login"] != null)
                            {
                                //parçalı view


                                var gelen = (StockManagementOperation.AppUsers)Session["Login"];



                                if (gelen.Status == 1)
                                {


                                    <li> @Html.ActionLink("Satıcı Ol", "Index", "Admin/Admin") </li>
                                    <li> @Html.ActionLink("Kullanıcı İşlemleri", "EditUserPanel", "Home")</li>
                                    <li> @Html.ActionLink("Çıkış Yap", "LogoutUser", "Home")</li>

                                }

                                else
                                {

                                    <li> @Html.ActionLink("Admin Paneline Git", "Index", "Admin/Admin")</li>
                                    <li> @Html.ActionLink("Kullanıcı İşlemleri", "EditUserPanel", "Home")</li>
                                    <li> @Html.ActionLink("Çıkış Yap", "LogoutUser", "Home")</li>
                                }

                            }
                            else
                            {
                                <li> @Html.ActionLink("Kayıt Ol", "RegisterUser", "Home") </li>
                                <li> @Html.ActionLink("Giriş Yap", "LoginUser", "Home") </li>
                            }

                        }
                        <div class="clear"></div>
                    </ul>
                </div>
                @Html.Action("SearchProduct", "Layout")
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <!-- start header_btm -->
    <div class="wrap">
        <div class="header_btm">
            <div class="menu">
                <ul>
                    @Html.Action("Category", "Layout")
                    <div class="clear"></div>
                </ul>
            </div>
            <div id="smart_nav">
                <a class="navicon" href="#menu-left"> </a>
            </div>

            <div class="header_right">
                <ul>


                    <li>
                        <a href="/UserCart">
                            <i class="cart"></i>@{
                                if (Session["Login"] != null)
                                {
                                    @Html.Action("UserCartCount", "Layout")
                                }
                                else
                                {
                                    <span>0</span>
                                }

                            }
                        </a>
                    </li>


                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <!-- start slider -->
    <!-- start image1_of_3 -->
    <!-- start main -->
    <div class="main_bg">
        <div class="wrap">
            <div class="main1">

                <div class="container">
                    @RenderBody()

                </div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
    </div>
    </div>
    </div>

    <div id="cwrap">
        <div class="container">
            <div class="row centered">
                <h3>Sponsorlar</h3>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <img src="https://www.google.com/cloud/assets/press/Google_Cloud_Logo.png" class="img-responsive" />
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <img src="http://www.bloter.net/wp-content/uploads/2013/08/AmazonLogo610.jpg" class="img-responsive">
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <img src="https://www.uniserver.nl/wp-content/uploads/2017/03/microsoft.png" class="img-responsive">
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <img src="https://www-03.ibm.com/press/us/en/attachment/20190.wss?fileId=ATTACH_FILE0&fileName=ibmpos_blue_thumb.jpg" class="img-responsive">
                </div>
            </div><! --/row -->
        </div><! --/container -->
    </div><! --/cwrap -->
    <!-- start footer -->
    <div class="footer_top">
        <div class="wrap">
            <div class="footer">
                <!-- start grids_of_3 -->
                <div class="span_of_3">
                    <div class="span1_of_3">
                        <h3>Adresimiz</h3>
                        <div class="mapouter">
                            <div class="gmap_canvas"><iframe width="300" height="250" id="gmap_canvas" src="https://maps.google.com/maps?q=Maslak itü&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe></div><a href="https://www.crocothemes.net">crocothemes</a>
                            <style>
                                .mapouter {
                                    overflow: hidden;
                                    height: 250px;
                                    width: 300px;
                                }

                                .gmap_canvas {
                                    background: none !important;
                                    height: 250px;
                                    width: 300px;
                                }
                            </style>
                        </div>
                    </div>
                    <div class="span1_of_3">
                        <h3>  </h3>
                        

                    </div>


                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- start footer -->
    <div class="footer_mid">
        <div class="wrap">
            <div class="footer">

                <div class="clear"></div>
            </div>
        </div>
    </div>
    <!-- start footer -->
    <div class="footer_bg">
        <div class="wrap">
            <div class="footer">
                <!-- scroll_top_btn -->
                <script type="text/javascript">
                    $(document).ready(function () {

                        var defaults = {
                            containerID: 'toTop', // fading element id
                            containerHoverID: 'toTopHover', // fading element hover id
                            scrollSpeed: 1200,
                            easingType: 'linear'
                        };


                        $().UItoTop({ easingType: 'easeOutQuart' });

                    });
                </script>
                <a href="#" id="toTop" style="display: block;"><span id="toTopHover" style="opacity: 1;"></span></a>
                <!--end scroll_top_btn -->
                <div class="f_nav1">
                    <ul>
                        <li> @Html.Action("Category", "Layout")</li>
                    </ul>
                </div>
                <div class="copy">
                    <p class="link"><span>@String.Format("{0:yyyy}", DateTime.Now)   © All rights reserved | Template by &nbsp;<a href="http://teknohisar.com">Celal Sevindi && Furkan Yüksel</a></span></p>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</body>
</html>
